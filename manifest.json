{
    "manifest_version": 3,
    "name": "ClipMD",
    "version": "0.1.0",
    "description": "Extract page content and convert to Markdown",
    "permissions": [
        "clipboardWrite",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "turndown.js",
                "content.js"
            ]
        }
    ]
}